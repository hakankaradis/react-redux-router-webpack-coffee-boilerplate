.tooltipwrapper
  display                   inline-block
  height                    23px
  margin-left               10px

.tooltip
  position                  relative
  border                    1px solid #727272
  background-color          #727272
  color                     white
  border-radius             50%
  height                    18px
  width                     18px
  &:before
    content                 '?'
    position                absolute
    left                    5px
    top                     2px