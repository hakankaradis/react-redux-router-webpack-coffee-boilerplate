@import '~components/colors/color.styl'

.testerbody
  .button
    margin-bottom           90px

.head
  img.headlanding
    width                   100%
    height                  780px

.contents
  margin                    75px 75px 0px 75px
  height                    600px

.singlecontent
  width                     360px
  height                    150px
  float                     left
  margin-left               75px
  margin-top                75px
  line-height               25px
  letter-spacing            .44px
  .title
    color                   $header-color
    font-weight             600
    font-size               16px
  .data
    margin-top              20px
    color                   $landing-box-data-color
    font-size               14px


.landingwelcome
  .action
    margin-bottom           110px


.landingfooter
  color                     $footer-text-color
  height                    120px
  width                     100%
  background                $footer-bg-color
  display                   flex
  align-items               center
  font-size                 14px
  .logo
    width                   173px
    height                  43px
    margin-left             40px

  .buttonwrapper
    display                 flex
    margin-left             auto
    margin-right            40px
    .button
      margin-right          20px


.headcontent
  position                  absolute
  transform                 translateX(-50%)
  left                      50%
  top                       130px
  color                     #FFF
  text-align                center

  .title
    font-size               48px
    font-weight             600

  .description
    font-size               20px
    line-height             26px
    letter-spacing          .29px
    margin                  0 auto
    margin-top              10px
    width                   650px

  .action
    margin                  20px auto



.landingheader
  display                   flex
  font-size                 14px

.landingheader
  color                     $header-color
  height                    60px
  width                     100%
  background                #FFF
  align-items               center
  cursor                    pointer
  .logo
    width                   124px
    height                  24px
    margin-left             20px
  .links
    display                 flex
    margin-left             auto
    margin-right            30px
    div
      margin-right          15px


.togglewrapper
  display                   flex
  margin-left               10px
  line-height               40px
  color                     $blue
  .tester
    margin-right            10px
    padding                 10px
  .organization
    padding                 10px
    margin-right            10px

  .selected
    color                   #8B8D8F
    background-color        $selected-toggle-bg-color
    position                relative
    &:after
      content               ''
      background            none
      border                5px solid transparent
      border-top-color      $selected-toggle-bg-color
      width                 10px
      top                   60px
      position              absolute
      box-sizing            border-box
      left                  50%
      transform             translateX(-50%)

